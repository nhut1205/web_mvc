@model IEnumerable<DoAnNet.Models.Product>


@{
    ViewBag.Title = "showProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@700&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@700&family=Poppins:wght@700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Optional Theme Stylesheet -->
<link rel="stylesheet" href="node_modules/glidejs/glide/dist/css/glide.theme.min.css">



<h2>showProduct</h2>


<html>
<head>
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <title>ShowProduct</title>
</head>

<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    @using (Html.BeginForm("SearchBaiHat", "Home", FormMethod.Get))
    {
        <div class="form-group">
            <input type="text" name="searchQuery" placeholder="Nhập tên sản phẩm" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    }

    <!---Main-->
    <main id="main">
        <!---------------------------------------------Latest Products------------------------------------------------------------------------------------->
        <section class="section latest__products" id="" latest>
            <div class="title__container">
                <div class="section__title active" data-id="Latest Producs">
                    <span class="dot"></span>
                    <h1 class="primary__title">Latest Products</h1>
                </div>
            </div>
            <!--------------------------------------------------------List Product------------------------------------------------------------------------->
        </section>
    </main>
</body>

<main role="main">
    @foreach (var item in Model)
    {
        <div class="danhsachsanpham py-5" style="display : flex">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <a href="/Products/Details">
                                <img class="bd-placeholder-img card-img-top" width="100%" height="350"
                                     src="~/img/@Html.DisplayFor(modelItem => item.Img)">
                            </a>
                            <div class="card-body">
                                <a href="#">
                                    <h5>@Html.DisplayFor(modelItem => item.Name)</h5>
                                </a>
                                <h6>
                                    @Html.DisplayFor(modelItem => item.Category.Name)
                                </h6>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                            @Html.ActionLink("Details", "Details", new { id = item.ProductId })
                                    </div>
                                    <small class="text-muted text-right">
                                        <s>@Html.DisplayFor(modelItem => item.Price)</s>
                                        <b>@Html.DisplayFor(modelItem => item.Price)</b>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</main>
</html>
