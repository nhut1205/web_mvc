
@{
    Layout = null;
}

@model DoAnNet.Models.TaiKhoan

<link href="~/Content/style.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@700&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@700&family=Poppins:wght@700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="node_modules/glidejs/glide/dist/css/glide.theme.min.css">
<link href="~/Content/logincss.css" rel="stylesheet" />

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Document</title>
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" />
<link href="~/Content/Login.css" rel="stylesheet" />

@Html.AntiForgeryToken()

@using (Html.BeginForm("DangNhap", "TaiKhoans", FormMethod.Post))
{
    <body>
        <div class="auth-wrapper">
            <div class="auth-container">
                <div class="auth-action-left">
                    <div class="auth-form-outer">
                        <h2 class="auth-form-title">
                            Sign In
                        </h2>
                        <div class="auth-external-container">
                            <div class="auth-external-list">
                                <ul>
                                    <li><a href="#"><i class="fa fa-google"></i></a></li>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                            <p class="auth-sgt">or sign in with:</p>
                        </div>
                        <form class="login-form">
                            @Html.LabelFor(model => model.TenTaiKhoan) @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(model => model.TenTaiKhoan, new { @class = "form-control" })
                            <div class="input-icon">
                                <div class="auth-form-input">
                                    @Html.LabelFor(model => model.MatKhau) @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    @Html.TextBoxFor(model => model.MatKhau, new { @class = "form-control" })
                                </div>
                            </div>
                            <label class="btn active">
                                <input type="checkbox" name='email1' checked>
                                <i class="fa fa-square-o"></i><i class="fa fa-check-square-o"></i>
                                <span> Remember password.</span>
                            </label>
                            <div class="footer-action">
                                <input type="submit" value="Sign In" class="auth-submit">
                                <a href="DangKi" class="auth-btn-direct">Sign Up</a>
                            </div>
                        </form>
                        <div class="auth-forgot-password">
                            <a href="#">Forfot Password</a>
                        </div>
                    </div>
                </div>
                <div class="auth-action-right">
                    <div class="auth-image">
                        <img src="~/img/vector.jpg" alt="login">
                    </div>
                </div>
            </div>
        </div>
        <script src="~/Content/showPassWord.js"></script>
    </body>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
else
{
    <div class="alert alert-danger">
        @TempData["ErorMessage"]
    </div>
}
