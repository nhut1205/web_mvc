@model DoAnNet.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Slab" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.1/css/foundation.min.css'>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
    <link rel="stylesheet" href="./style.css">
    <link href="~/Content/detailProduct.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>

    <header class="header" id="header">
        <!--Navigation-->
        <div class="navigation">
            <div class="container">
                <nav class="nav">
                    <div class="nav__hamburger">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M0 96C0 78.3 14.3 64 32 64H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32H416c17.7 0 32 14.3 32 32s-14.3 32-32 32H32c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32H32c-17.7 0-32-14.3-32-32s14.3-32 32-32H416c17.7 0 32 14.3 32 32z" /></svg>
                    </div>

                    <div class="nav nav__logo">
                        <a href="/" class="scroll-link">PHONE</a>
                    </div>

                    <div class="nav__menu">
                        <div class="menu__top">
                            <span class="nav__category">PHONE</span>
                            <a href="#" class="close__toggle">
                                <svg xmlns="http://www.w3.org/2000/svg" height="2rem" viewBox="0 0 384 512"><path d="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z" /></svg>
                            </a>
                        </div>

                        <ul class="nav__list">
                            <li class="nav__item">
                                <a href="#header" class="nav__link scroll-link">Home</a>
                            </li>

                            <li class="nav__item">
                                <a href="#category" class="nav__link scroll-link">Category</a>
                            </li>

                            <li class="nav__item">
                                <a href="#news" class="nav__link scroll-link">Blogs</a>
                            </li>

                            <li class="nav__item">
                                <a href="#contact" class="nav__link scroll-link">Contact</a>
                            </li>
                        </ul>

                    </div>
                    <div class="nav__icons">
                        <a href="/TaiKhoans/DangNhap" class="icon__item">
                            <svg xmlns="http://www.w3.org/2000/svg" height="2rem" viewBox="0 0 448 512"><path d="M304 128a80 80 0 1 0 -160 0 80 80 0 1 0 160 0zM96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM49.3 464H398.7c-8.9-63.3-63.3-112-129-112H178.3c-65.7 0-120.1 48.7-129 112zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3z" /></svg>
                        </a>

                        <a href="#" class="icon__item">
                            <svg xmlns="http://www.w3.org/2000/svg" height="2rem" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z" /></svg>
                        </a>

                        <!--Giỏ hàng-->
                        <a href="/ShoppingCartItems/Index" class="icon__item">
                            <svg xmlns="http://www.w3.org/2000/svg" height="2rem" viewBox="0 0 576 512"><!--! Font Awesome Free 6.4.2 by - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z" /></svg>
                            <span id="cart__total">0</span>
                        </a>
                    </div>
                </nav>
            </div>
        </div>
        </header>
        <!-- partial:index.partial.html -->
        <main class="main">
            <div class="mainWrapper">
                <div class="mainBackground clearfix">
                    <div class="row">
                        <div class="column small-centered">
                            <div class="productCard_block">
                                <div class="row">
                                    <div class="small-12 large-6 columns">
                                        <div class="productCard_leftSide clearfix">
                                            <div class="productCard_brendBlock">
                                                <a class="productCard_brendBlock__imageBlock" href="#">

                                                </a>
                                            </div>
                                            <!-- Sử lí hình ảnh  -->
                                            <div class="sliderBlock">
                                                <ul class="sliderBlock_items">
                                                    <li class="sliderBlock_items__itemPhoto sliderBlock_items__showing">
                                                        <img src="~/Image/@Html.DisplayFor(model => model.Img)" class="card-img-top" alt="..." />
                                                    </li>
                                                    <!---Them anh ve san pham o day-->
                                                </ul>

                                                <div class="sliderBlock_controls">
                                                    <div class="sliderBlock_controls__navigatin">
                                                        <div class="sliderBlock_controls__wrapper">
                                                            <div class="sliderBlock_controls__arrow sliderBlock_controls__arrowBackward">
                                                                <i class="fa fa-angle-left" aria-hidden="true"></i>
                                                            </div>
                                                            <div class="sliderBlock_controls__arrow sliderBlock_controls__arrowForward">
                                                                <i class="fa fa-angle-right" aria-hidden="true"></i>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <ul class="sliderBlock_positionControls">
                                                        <li class="sliderBlock_positionControls__paginatorItem sliderBlock_positionControls__active"></li>
                                                        <li class="sliderBlock_positionControls__paginatorItem"></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="small-12 large-6 columns">
                                        <div class="productCard_rightSide">
                                            <div class="block_specification">
                                                <div class="block_specification__specificationShow">
                                                    <i class="fa fa-cog block_specification__button block_specification__button__rotate"
                                                       aria-hidden="true"></i>
                                                    <span class="block_specification__text">spec</span>
                                                </div>
                                                <div class="block_specification__informationShow hide">
                                                    <i class="fa fa-info-circle block_specification__button block_specification__button__jump"
                                                       aria-hidden="true"></i>
                                                    <span class="block_specification__text">inform</span>
                                                </div>
                                            </div>

                                            <p class="block_model">
                                                <span class="block_model__text">Model: </span>
                                                <span class="block_model__number">@Html.DisplayFor(model => model.ProductId)</span>
                                            </p>

                                            <div class="block_product">
                                                <h2 class="block_name block_name__mainName">@Html.DisplayFor(model => model.Name)<sup>&reg; </sup></h2>
                                                <h2 class="block_name block_name__addName">  @Html.DisplayFor(model => model.Category.Name)</h2>

                                                <p class="block_product__advantagesProduct">
                                                    Guaranteed genuine and best products from our store,
                                                </p>

                                                <div class="block_informationAboutDevice">

                                                    <div class="block_descriptionCharacteristic block_descriptionCharacteristic__disActive">
                                                        <table class="block_specificationInformation_table">
                                                            <tr>
                                                                <th>Screen</th>
                                                                <th>6.1 inches</th>
                                                            </tr>
                                                            <tr>
                                                                <td>Pin</td>
                                                                <td>
                                                                    3,279mAh
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>GB</td>
                                                                <td>128 GB</td>
                                                            </tr>

                                                            <tr>
                                                                <td>Camera</td>
                                                                <td>
                                                                    12MP, ƒ/1.9
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>Connect</td>
                                                                <td>
                                                                    5G
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>Weight</td>
                                                                <td>172 g</td>
                                                            </tr>
                                                        </table>
                                                    </div>

                                                    <div class="block_descriptionInformation">
                                                        <span>
                                                            @Html.DisplayFor(model => model.Description) <a class="block_product__link"
                                                                                                            href="#">...........<sup>&reg;</sup></a>
                                                        </span>
                                                    </div>

                                                    <div class="row ">
                                                        <div class="large-6 small-12 column left-align">
                                                            <div class="block_price">
                                                                <p class="block_price__currency">@Html.DisplayFor(model => model.Price)$</p>
                                                                <p class="block_price__shipping">Shipping and taxes extra</p>
                                                            </div>
                                                            <div class="block_quantity clearfix">
                                                                <span class="text_specification">Quantity</span>
                                                                <div class="block_quantity__chooseBlock">
                                                                    <input class="block_quantity__number" name="quantityNumber"
                                                                           type="text" min="1" value="1">
                                                                    <button class="block_quantity__button block_quantity__up"></button>
                                                                    <button class="block_quantity__button block_quantity__down"></button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="large-6 small-12 column end">
                                                            <div class="block_goodColor">
                                                                <span class="text_specification">Choose your colors:</span>
                                                                <div class="block_goodColor__allColors">
                                                                    <input type="radio" name="colorOfItem" class="radio_button"
                                                                           id="radioColor" checked />
                                                                    <label for="radioColor"
                                                                           class="block_goodColor__radio block_goodColor__black"></label>
                                                                    <input type="radio" name="colorOfItem" class="radio_button"
                                                                           id="radioColor2" />
                                                                    <label for="radioColor2"
                                                                           class="block_goodColor__radio block_goodColor__silver"></label>
                                                                </div>
                                                            </div>
                                                            <button class="button button_addToCard">
                                                                Add to Cart
                                                            </button>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </main>
        <!-- partial -->
        <script src="~/Content/detailProduct.js"></script>

</body>
</html>

