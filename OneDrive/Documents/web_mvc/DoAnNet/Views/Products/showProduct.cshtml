@model IEnumerable<DoAnNet.Models.Product>


@{
    ViewBag.Title = "showProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<html>
<head>
    <meta name="viewport" content="width=device-width">
    <!-- Optional Theme Stylesheet -->
    <link href="~/Content/carousel.css" rel="stylesheet" />
    <script src="~/Content/carousel.js"></script>
    <link href="~/Content/news.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>

<body>
    <!---Main-->
    <main id="main">
        <!---------------------------------------------Latest Products------------------------------------------------------------------------------------->
        <section class="section latest__products" id="" latest>
            <div class="title__container">
                <div class="section__title active" data-id="Latest Producs">
                    <span class="dot"></span>
                    <h1 class="primary__title">Latest Products</h1>
                </div>
            </div>
            <!--------------------------------------------------------List Product------------------------------------------------------------------------->
        </section>
    </main>

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="cards-wrapper">
                    <div class="card-group">
                        @foreach (var item in Model)
                        {
                            <div class="card">
                                <img src="~/Image/@Html.DisplayFor(modelItem => item.Img)" class="card-img-top" alt="..." />
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description).</p>
                                    <a href="#" class="btn btn-primary">@Html.ActionLink("Details", "Details", new { id = item.ProductId })</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <div class="cards-wrapper">
                    <div class="card-group">
                        @foreach (var item in Model)
                        {
                            <div class="card">
                                <img src="~/Image/@Html.DisplayFor(modelItem => item.Img)" class="card-img-top" alt="..." />
                                <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description).</p>
                                    <a href="#" class="btn btn-primary">@Html.ActionLink("Details", "Details", new { id = item.ProductId })</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <!--------------------------------------------------------List Product------------------------------------------------------------------------->
    <section class="category__section section" id="category">
        <div class="tab__list">
            <div class="title__container tabs">
                <div class="section__titles category__titles">
                    <div class="section__title filter-btn" data-id="">
                        <h1 class="primary__title" style="margin-left : 50px">All Products</h1>
                    </div>
                </div>

                <div class="section__titles category__titles">
                    <div class="section__title filter-btn" data-id="">
                        <h1 class="primary__title" style="margin-left : 50px">Samsung</h1>
                    </div>
                </div>

                <div class="section__titles category__titles">
                    <div class="section__title filter-btn" data-id="">
                        <h1 class="primary__title" style="margin-left : 50px">Iphone</h1>
                    </div>
                </div>

                <div class="section__titles category__titles">
                    <div class="section__title filter-btn" data-id="">
                        <h1 class="primary__title" style="margin-left : 50px"></h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>


<section class="light">
    <div class="container py-2">
        <div class="h1 text-center text-dark" id="pageHeaderTitle"></div>

        <article class="postcard light blue">
            <a class="postcard__img_link" href="#">
                <img class="postcard__img" src="https://picsum.photos/1000/1000" alt="Image Title" />
            </a>
            <div class="postcard__text t-dark">
                <h1 class="postcard__title blue"><a href="#">FreeShip</a></h1>
                <div class="postcard__subtitle small">
