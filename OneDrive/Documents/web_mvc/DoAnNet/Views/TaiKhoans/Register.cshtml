@model DoAnNet.Models.TaiKhoan

@{
    Layout = null;
}


<link href="~/Content/style.css" rel="stylesheet" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@700&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Archivo+Narrow:wght@700&family=Poppins:wght@700&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="node_modules/glidejs/glide/dist/css/glide.theme.min.css">
<link href="~/Content/logincss.css" rel="stylesheet" />

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Document</title>
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" />
<link href="~/Content/Login.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm("Register", "TaiKhoans", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <!-- Form without bootstrap -->
        <div class="auth-wrapper">
            <div class="auth-container">
                <div class="auth-action-left">
                    <div class="auth-form-outer">
                        <h2 class="auth-form-title">
                            Create Account
                        </h2>
                        <div class="auth-external-container">
                            <div class="auth-external-list">
                                <ul>
                                    <li><a href="#"><i class="fa fa-google"></i></a></li>
                                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                                </ul>
                            </div>
                            <p class="auth-sgt">or use your email for registration:</p>
                        </div>
                        <form class="login-form">
                            <div class="auth-form-input">
                                @Html.LabelFor(model => model.TenTaiKhoan, htmlAttributes: new { @class = "control-label" })              @Html.ValidationMessageFor(model => model.TenTaiKhoan, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.TenTaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div class="input-icon">
                                <div class="auth-form-input">
                                    @Html.LabelFor(model => model.MatKhau, htmlAttributes: new { @class = "control-label" })          @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                                    @*<i class="fa fa-eye show-password"></i>*@
                                </div>
                            </div>
                            <div class="input-icon">
                                <div class="auth-form-input">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @*@Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <div class="auth-form-input">
                                @Html.LabelFor(model => model.TenHienThi, htmlAttributes: new { @class = "control-label" })           @Html.ValidationMessageFor(model => model.TenHienThi, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.TenHienThi, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <label class="btn active">
                                <input type="checkbox" name='email1' checked>
                                <i class="fa fa-square-o"></i><i class="fa fa-check-square-o"></i>
                                <span> I agree to the <a href="#">Terms</a> and <a href="#">Privacy Policy</a>.</span>
                            </label>
                            <div class="footer-action">
                                <input type="submit" value="Sign Up" class="auth-submit">
                                <a href="login" class="auth-btn-direct">Log In</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="auth-action-right">
                    <div class="auth-image">
                        <img src="~/Image/login-page-2578971-2147152.png" />
                    </div>
                </div>
            </div>
        </div>
        <script src="js/common.js"></script>
    }
</body>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
else
{
<div class="alert alert-danger">
    @ViewBag.TB
</div>
}

